{
  "version": "2.0",
  "logging": {
    "applicationInsights": {
      "samplingSettings": {
        "isEnabled": true,
        "excludedTypes": "Request"
      }
    }
  },
  "DicomFunctions": {
    "Indexing": {
      "BatchSize": 100,
      "BatchThreadCount": 5,
      "MaxParallelBatches": 10,
      "RetryOptions": {
        "BackoffCoefficient": 3,
        "FirstRetryInterval": "00:01:00",
        "MaxNumberOfAttempts": 4
      }
    },
    "PurgeHistory": {
      "RuntimeStatuses": [ "Completed" ],
      "MinimumAgeDays": 14,
      "Frequency": "0 0 * * *"
    }
  },
  "BlobStore": {
    "ConnectionString": null,
    "Containers": {
      "Metadata": "metadatacontainer"
    },
    "RequestOptions": {
      "ExponentialRetryBackoffDeltaInSeconds": 4,
      "ExponentialRetryMaxAttempts": 6,
      "ServerTimeoutInMinutes": 2,
      "DownloadMaximumConcurrency": 5,
      "UploadMaximumConcurrency": 5
    }
  },
  "SqlServer": {
    "ConnectionString": "server=(local);Initial Catalog=Dicom;Integrated Security=true",
    "TransientFaultRetryPolicy": {
      "InitialDelay": "00:00:00.100",
      "RetryCount": 3,
      "Factor": 2,
      "FastFirst": true
    }
  }
}
