    </None>
    <None Include="Indexing\ReindexDurableFunctionTests.*.cs">
      <DependentUpon>ReindexDurableFunctionTests.cs</DependentUpon>
    </None>
    <None Include="Copy\CopyDurableFunctionTests.*.cs">
