{
  "Logging": {
    "Console": {
      "IncludeScopes": true
    },
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information",
      "Microsoft.Health": "Information"
    }
  },
  "DicomWeb": {
    "Endpoint": "https://localhost:63838",
    "Authentication": {
      "Enabled": false
    }
  },
  "Fhir": {
    "Endpoint": "https://localhost:44348",
    "Authentication": {
      "Enabled": true,
      "AuthenticationType": "OAuth2ClientCredential",
      "OAuth2ClientCredential": {
        "TokenUri": "https://localhost:44348/connect/token",
        "Resource": "fhir-api",
        "Scope": "fhir-api",
        "ClientId": "globalAdminServicePrincipal",
        "ClientSecret": "globalAdminServicePrincipal"
      }
    }
  },
  "DicomCastWorker": {
    "PollInterval": "00:00:05"

  }
}
